extends ../layout/index

block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes     
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow-xl
                form.space-y-5(method="POST" action="/auth/olvide-password" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400.mb-2(placeholder="Tu Email" type="email" name="email") 
                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs") ¿Ya tienes cuenta? Inicia Sesion 
                        a(href="/auth/registro" class="text-gray-500 text-xs") ¿No tienes cuenta? Registrate    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 py-3 cursor-pointer text-white font-bold " type="submit" value="Enviar Instrucciones")     