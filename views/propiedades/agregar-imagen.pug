extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    
block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina


        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="imagen" class="border-dashed dropzone border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}`)
                input(id="DropZone" type="hidden" name="_csrf" value= csrfToken)

            button(id="publicar" class="w-full py-3 mt-5 bg-indigo-600 hover:bg-indigo-700 rounded uppercase text-white font-bold cursor-pointer" type="button") Publicar Propiedad

block scripts
    script(src="/js/agregarImagen.js")